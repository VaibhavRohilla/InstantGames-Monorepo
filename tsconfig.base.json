{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2021"],
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": ".",
    "types": ["vitest/globals", "node"],
    "paths": {
      "@instant-games/core-*": ["packages/core-*/src"],
      "@instant-games/game-math-*": ["packages/game-math-*/src"],
      "@instant-games/*": ["packages/*/src"],
      "@instant-games/core-types": ["packages/core-types/src"],
      "@instant-games/core-auth": ["packages/core-auth/src"],
      "@instant-games/core-config": ["packages/core-config/src"],
      "@instant-games/core-rng": ["packages/core-rng/src"],
      "@instant-games/core-provably-fair": ["packages/core-provably-fair/src"],
      "@instant-games/core-wallet": ["packages/core-wallet/src"],
      "@instant-games/core-ledger": ["packages/core-ledger/src"],
      "@instant-games/core-redis": ["packages/core-redis/src"],
      "@instant-games/core-db": ["packages/core-db/src"],
      "@instant-games/core-game-history": ["packages/core-game-history/src"],
      "@instant-games/core-risk": ["packages/core-risk/src"],
      "@instant-games/core-idempotency": ["packages/core-idempotency/src"],
      "@instant-games/core-logging": ["packages/core-logging/src"],
      "@instant-games/core-metrics": ["packages/core-metrics/src"],
      "@instant-games/core-bonus": ["packages/core-bonus/src"],
      "@instant-games/core-tenant": ["packages/core-tenant/src"],
      "@instant-games/core-game-slice": ["packages/core-game-slice/src"],
      "@instant-games/game-math-roulette": ["packages/game-math-roulette/src"],
      "@instant-games/game-math-mines": ["packages/game-math-mines/src"],
      "@instant-games/game-math-dice": ["packages/game-math-dice/src"],
      "@instant-games/game-math-plinko": ["packages/game-math-plinko/src"],
      "@instant-games/game-math-hilo": ["packages/game-math-hilo/src"],
      "@instant-games/game-math-keno": ["packages/game-math-keno/src"],
      "@instant-games/game-math-wheel": ["packages/game-math-wheel/src"],
      "@instant-games/game-math-coinflip": ["packages/game-math-coinflip/src"]
    }
  },
  "include": ["vitest-env.d.ts", "apps", "packages"]
}
